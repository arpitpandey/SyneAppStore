<%= form_for(@product, :url => { :action =>'addrecord'}, :html => { :multipart => true} ) do |f| %>
<center>
  <table cellspacing=3px style="margin-left:50px">
	<br/>
	<tr>
		<td><b>Name of Product</b></td>
		<td><%= f.text_field :name %></td>
	</tr>
	<tr>
		<td><b>Product Type</b></td>
		<td><%= f.select :ptype, ["PhoneApp","WindowsApp","Tools","Accesories"] %></td>
	<tr>
	<tr>
		<td><b>Product Description</b></td>
		<td><%= f.text_field :description %></td>
	</tr>
	<tr>
		<td><b>Product Price</b></td>
		<td><%= f.text_field :price %></td>
	<tr>
	<tr>
		<td><b>Is Active</b></td>
		<td><%= f.check_box :isactive %></td>
	</tr>
	<tr>
		<td><b>Product Image</b></td>
		<td><%= f.file_field :image %></td>
	<tr>
</table><br/>
<center><%= f.submit 'Add Product'%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="reset" /></center>

</center>
<% end %>
